<textarea id="inputArray" rows="3" placeholder="Enter a sorted array (comma-separated values)"></textarea><br>
<input type="number" id="targetValue" placeholder="Enter the target value"><br>
<button onclick="runBinarySearch()">Run</button>
<div id="output"></div>

<script>
  function binarySearch(arr, target) {
    let left = 0;
    let right = arr.length - 1;
    let output = "";

    while (left <= right) {
      let mid = Math.floor((left + right) / 2);

      if (arr[mid] === target) {
        output = `Target ${target} found at index ${mid}`;
        break;
      } else if (arr[mid] < target) {
        left = mid + 1;
      } else {
        right = mid - 1;
      }
    }

    if (!output) {
      output = `Target ${target} not found in the array.`;
    }
    
    document.getElementById("output").innerText = output;
  }

  function runBinarySearch() {
    let inputArray = document.getElementById("inputArray").value.split(",").map(Number);
    let targetValue = parseInt(document.getElementById("targetValue").value);

    binarySearch(inputArray, targetValue);
  }
  
  /* Toggle between hiding and showing the computer science knowledge dropdown content */
  function myFunctionCS() {
    document.getElementById("myDropdownCS").classList.toggle("show");
  }

  /* Toggle between hiding and showing the mathematical knowledge dropdown content */
  function myFunctionMath() {
    document.getElementById("myDropdownMath").classList.toggle("show");
  }

  // Close the dropdown if the user clicks outside of it
  window.onclick = function(e) {
    if (!e.target.matches('.dropbtn')) {
      var dropdowns = document.getElementsByClassName("dropdown-content");
      for (var d = 0; d < dropdowns.length; d++) {
        var openDropdown = dropdowns[d];
        if (openDropdown.classList.contains('show')) {
          openDropdown.classList.remove('show');
        }
      }
    }
  }
</script>
